<!--Creation of cards -->
<div class="container mt-5">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="cocktail-card mt-5 mr-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <div class="link">
           <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
  <% end %>
 </div>
</div>
<div >
  <button  type="button" class="btn btn-primary">
    <%= link_to("Create", new_cocktail_path) %>
